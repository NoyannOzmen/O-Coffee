<%- include('partials/header') %>

<div class="favorites-container">

  <div class="row">
    <div class="col">
      <h2>Votre Panier</h2>
      <table class="favorites-table">
        <thead>
          <th>Article</th>
          <th>Prix</th>
          <th></th>
        </thead>
        <tbody>
          <% favoritesList.forEach(coffee => { %>
            <tr>
              <td>
                <img class="coffee-article-img-thumb" src="/integration/images/<%= coffee.reference %>.webp" alt="<%= coffee.name %>">
                <div>
                    <h3 class="coffeeName"><%= coffee.name %></h3>
                </div>
              </td>

              <td>
                <h3 class="coffeeDesc"><%= coffee.description %></h3>
              </td>

              <td>
                <a href="/favoris/delete/<%= coffee.id %>">Supprimer des favoris</a>
              </td>
            </tr>
          <% }) %>

      </table>

      <div class="row">
          <a class="catalogue-display" title="Catalogue" href="/catalogue">Retour au catalogue</a>
      </div>

    </div>
  </div>
</div>

<%- include('partials/footer') %>